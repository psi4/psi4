#! External potential calculation with one Ghost atom and one point charge at the same position.

molecule mol {
  @N 0. 0. 1.
  N 0. 0. 0.
  no_reorient
  no_com
  symmetry c1
  -7 1
}

# Define point charge on top of first Ghost atom
import numpy as np
embedding_charges = [[7.05, np.array([0., 0., 1.]) / psi_bohr2angstroms]]

set basis 6-31G
set reference rhf
e = energy('pbe', embedding_charges=embedding_charges)
compare_values(-110.2168666458496773, e, 6, 'Total energy') #TEST
