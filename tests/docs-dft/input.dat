        fenergy.write('+-%27s-+-%140s-+\n' % (27 * '-', 140 * '-'))

        if ((not funcdict[fctl]['is_c_hybrid']) and (not funcdict[fctl]['is_c_lrc']) and (not funcdict[fctl]['is_x_lrc'])):
