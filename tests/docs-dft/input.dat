            body(fdhybrid, funcdict, fctl)

        if funcdict[fctl]['is_c_scs_hybrid']:
            body(fscsdhybrid, funcdict, fctl)

        if funcdict[fctl]['dispersion']:
            body(fdisp, funcdict, fctl)
