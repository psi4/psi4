#! force occupations in scf

molecule sodium {
1 1
Na
}

set d_convergence 9

activate(sodium)
set basis STO-3G
set reference rhf
set guess sad
set sad_frac_occ true
cation_e = energy('scf')
compare_values(-159.78459588747, cation_e, 9, "Singlet cation energy")             #TEST

molecule sodium {
0 2
Na
}

activate(sodium)
set basis STO-3G
set reference rohf
set guess read
set docc [ 2, 0, 0, 0, 0, 1, 1, 1 ]
set socc [ 1, 0, 0, 0, 0, 0, 0, 0 ]
neutral_e = energy('scf')
compare_values(-159.66819870290, neutral_e, 9, "Doublet neutral energy")         #TEST


molecule {
0 2
Li
}

set basis STO-3G
set reference rohf
set guess sad
set docc [ 1, 0, 0, 0, 0, 0, 0, 0 ]
set socc [ 1, 0, 0, 0, 0, 0, 0, 0 ]
li_e = energy('scf')
compare_values(-7.31560393951, li_e, 9, "Lithium doublet energy")             #TEST
