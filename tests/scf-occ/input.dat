#! force occupations in scf

molecule sodium {
1 1
Na
}

set d_convergence 9

activate(sodium)
set basis STO-3G
set reference rhf
set guess sad
set sad_frac_occ true

if psi4.core.get_option("scf", "orbital_optimizer_package") != "INTERNAL":
    psi4.set_options({"e_convergence": 9, "d_convergence": 7})

cation_e = energy('scf')
compare_values(cation_e, -159.78459593607246, 9, "Singlet cation energy")             #TEST

molecule sodium {
0 2
Na
}

activate(sodium)
set basis STO-3G
set reference rohf
set guess read
set docc [ 2, 0, 0, 0, 0, 1, 1, 1 ]
set socc [ 1, 0, 0, 0, 0, 0, 0, 0 ]
neutral_e = energy('scf')
compare_values(neutral_e, -159.66819874624485, 9, "Doublet neutral energy")         #TEST


molecule {
0 2
Li
}

set basis STO-3G
set reference rohf
set guess sad
set docc [ 1, 0, 0, 0, 0, 0, 0, 0 ]
set socc [ 1, 0, 0, 0, 0, 0, 0, 0 ]
li_e = energy('scf')
compare_values(li_e, -7.31560391523898, 9, "Lithium doublet energy")             #TEST
