BINOBJ = $(CXXSRC:%.cc=%.o)

include ../MakeRules

ifneq ($(DODEPEND),no)
$(BINOBJ:%.o=%.d): $(DEPENDINCLUDE)
include $(BINOBJ:%.o=%.d)
endif

install_man:: cceom.1
	$(MKDIRS) $(DESTDIR)$(mandir)/man1
	$(INSTALL_INCLUDE) $^ $(DESTDIR)$(mandir)/man1

