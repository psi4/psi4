H       0.10002049   4.24958115  -1.10222079
no_reorient
no_com
symmetry c1
units bohr
}

set d_convergence 9

# compute nbody
g, wfn = gradient('SCF-d3bj/STO-3G', molecule=water_trimer, bsse_type='cp', max_nbody=2,
                                      return_total_data=True, return_wfn=True)
core.clean()

# test fresh env
