    wfn.variable("CURRENT GRADIENT"),  #TEST
    variable("CURRENT GRADIENT"),  #TEST
]:  #TEST
    compare_values(ref_2cp_grad + ref_disp_2cp_grad, result, 8, 'CP-Corrected Gradient')  #TEST

# compute pieces
cp_scheme = {  #TEST
    '((1, 2), (1, 2, 3))': 1,  #TEST
    '((1, 3), (1, 2, 3))': 1,  #TEST
    '((2, 3), (1, 2, 3))': 1,  #TEST
    '((1,), (1, 2, 3))': -2,  #TEST
    '((2,), (1, 2, 3))': -2,  #TEST
    '((3,), (1, 2, 3))': -2,  #TEST
    '((1,), (1,))': 1,  #TEST
    '((2,), (2,))': 1,  #TEST
    '((3,), (3,))': 1,  #TEST
}  #TEST

energy_dict, gradient_dict = {}, {} #TEST
for i in cp_scheme: #TEST
    mol = water_trimer.extract_subsets(eval(i)[0], list(set(eval(i)[1]) - set(eval(i)[0]))) #TEST
    gradient_dict[i], wfn_mol = gradient('SCF-d3bj/STO-3G', molecule=mol, return_wfn=True) #TEST
    energy_dict[i] = core.variable('CURRENT ENERGY') #TEST
    core.clean() #TEST

    for result in [
        energy_dict[i],
        wfn.variable(i),
        wfn_mol.variable("CURRENT ENERGY"),
        variable("CURRENT ENERGY"),
    ]:
        compare_values(ref[i][0] + ref_disp[i][0], result, 8, f"Energy of {i}")  #TEST

    for result in [
        gradient_dict[i],
        wfn.variable(f"PTYPE {i}"),
        wfn_mol.variable("CURRENT GRADIENT"),
        variable("CURRENT GRADIENT"),
    ]:
        compare_arrays(ref_disp[i][1], result.rms(), 8, f"Gradient RMS of {i}")  #TEST
    compare_arrays(gradient_dict[i], wfn.variable(f'PTYPE {i}'), 8, 'Gradient of %s' %i) #TEST


# recompute from pieces
ene, grad = 0, np.zeros((9, 3)) #TEST

for i in cp_scheme: #TEST
    ene += cp_scheme[i] * energy_dict[i] #TEST

for i in range(3): #TEST
    key = '((%i,), (%i,))' %(i + 1, i + 1) #TEST
    grad[i*3: i*3 + 3, :] += cp_scheme.pop(key) * np.array(gradient_dict[key]) #TEST

for i in cp_scheme: #TEST
    grad += cp_scheme[i] * np.array(gradient_dict[i]) #TEST

# test
for result in [  #TEST
    wfn.variable('2'),  #TEST
    wfn.variable('2CP'),  #TEST
    wfn.variable("CURRENT ENERGY"),  #TEST
    ene,  #TEST
]:  #TEST
    compare_values(ref_2cp_ene + ref_disp_2cp_ene, result, 8, 'CP-Corrected Energy')  #TEST

