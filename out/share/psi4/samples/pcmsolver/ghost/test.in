nucenergy   =  12.0367196636183458 #TEST
polenergy   =  -0.0059568153047844 #TEST
totalenergy = -55.802798823871 #TEST

ref={}
ref['noCP'] = 0.011128150727074626 #TEST
ref['CP'] = 0.012103154107379055 #TEST

molecule NH3 {
