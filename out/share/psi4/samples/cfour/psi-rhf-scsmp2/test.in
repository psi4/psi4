#! MP2 energy components. Checks that computed identically
#! between cfour and psi4

store = {}  #TEST
test_psivars = ['scf total energy', 'mp2 same-spin correlation energy', 'mp2 opposite-spin correlation energy', 'mp2 singles energy', 'mp2 correlation energy', 'mp2 total energy', 'current reference energy', 'current correlation energy', 'current energy']  #TEST

print('    <<<  RHF  >>>')

cfour {
MP2 single-point energy calculation
O
H 1 R
H 1 R 2 A

R=0.958
A=104.5

*ACES2(CALC=MP2,BASIS=AUG-PVDZ
SCF_CONV=12
MEMORY=20000000)
}

energy('cfour')
print_variables()
clean()

for vari in test_psivars:  #TEST
    store[vari] = variable(vari)  #TEST
    set_variable(vari, 0.0)  #TEST
    #print(store[vari], variable(vari))  #TEST
    #print variable(vari)  #TEST

molecule h2o {
O
H 1 R
H 1 R 2 A

R=0.958
A=104.5
}

set basis aug-cc-pvdz
set e_convergence 10
set mp2_type conv

energy('mp2')

print_variables()

for vari in test_psivars:  #TEST
    compare_values(store[vari], variable(vari), 6, vari.upper())  #TEST

