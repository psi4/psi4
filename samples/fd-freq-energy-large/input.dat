a2_freqs.set(0, 1, anal_freqs[12])
a2_freqs.set(0, 2, anal_freqs[19])

b1_freqs = PsiMod.Vector(6)
b1_freqs.set(0, 0, anal_freqs[1])
b1_freqs.set(0, 1, anal_freqs[3])
