#! Various gradients for a strained helium dimer and water molecule
import numpy as np
memory 500 mb

nucenergy_ref = 9.16819326039

molecule h2o {
  O
  H 1 0.96
  H 1 0.96 2 104.5
}

# Conventional to keep angular momentum low
set {
    scf_type      df
}

h2o.update_geometry()
compare_values(nucenergy_ref, h2o.nuclear_repulsion_energy(), 9, "Nuclear repulsion energy") #TEST

# SCF TESTS
scf_dz, wfn_dz = freq('SCF/cc-pVDZ', return_wfn=True, der_type=1)
compare_values(wfn_dz.frequencies().get(0), 1809.2345729, 4, "SCF/cc-pVDZ Frequency 1")            #TEST
compare_values(wfn_dz.frequencies().get(1), 3923.1569958, 4, "SCF/cc-pVDZ Frequency 2")            #TEST
compare_values(wfn_dz.frequencies().get(2), 4020.1821381, 4, "SCF/cc-pVDZ Frequency 3")            #TEST

