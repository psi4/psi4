compare_values( NH3_321G_RHF_G, variable('GIBBS FREE ENERGY'), 6, "NH3 Gibbs Free Energy") #TEST

#

molecule CH4 {
   symmetry c2v
   C
   H 1 r
   H 1 r 2 TDA
   H 1 r 2 TDA 3 120
   H 1 r 2 TDA 4 120
   r = 1.09
}

set {
  basis 3-21G
  max_disp_g_convergence = 1e-5
  docc [3, 0, 1, 1]
}

optimize('scf')
frequencies('scf')
compare_values( CH4_321G_RHF_G, variable('GIBBS FREE ENERGY'), 6, "CH4 Gibbs Free Energy") #TEST

