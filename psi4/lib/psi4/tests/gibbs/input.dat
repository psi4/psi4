#! Test Gibbs free energies at 298 K of N2, H2O, and CH4.

N2_321G_RHF_G  = -108.313412 #TEST
H2O_321G_RHF_G =  -75.581830 #TEST
NH3_321G_RHF_G =  -55.854174 #TEST
CH4_321G_RHF_G =  -39.946175 #TEST

molecule N2 {
  N
  N 1 1.1
}

set {
  basis 3-21G
  max_disp_g_convergence = 1e-5
  scf_type pk
}

optimize('scf')
frequencies('scf')
compare_values( N2_321G_RHF_G, variable('GIBBS FREE ENERGY'), 6, "N2 Gibbs Free Energy") #TEST

#

molecule H2O {
 0 1
 H
 O 1 1.0
 H 2 1.0 1 109.5
}

set {
  basis 3-21G
  max_disp_g_convergence = 1e-5
}

optimize('scf')
frequencies('scf')
compare_values( H2O_321G_RHF_G, variable('GIBBS FREE ENERGY'), 6, "H2O Gibbs Free Energy") #TEST

#

molecule nh3 {
  symmetry cs
  N         -0.000000000075    -0.055054563313     0.000000000000
  H         -0.477097924216     0.254982462134    -0.826357845779
  H         -0.477097924216     0.254982462134     0.826357845779
  H          0.954195849480     0.254982462271     0.000000000000
}

set {
  basis 3-21G
  max_disp_g_convergence = 1e-5
  docc [4, 1]
}

optimize('scf')
