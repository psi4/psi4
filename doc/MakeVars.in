
SHELL = /bin/sh

#
# Initialize variables that have been figured out by configure.
#
target = @target@
prefix = @prefix@
docdir = @docdir@
datarootdir = @datarootdir@
datadir = @datadir@
dvidir = $(docdir)/dvi
psdir = $(docdir)/ps
pdfdir = $(docdir)/pdf
htmldir = $(docdir)/html
top_srcdir = @top_srcdir@
# this file is used by the subdirectories, so top_objdir is relative to those
top_objdir = ../..
currdir = $(shell echo `pwd`)

LATEX = @LATEX@
PDFLATEX = @PDFLATEX@
BIBTEX = @BIBTEX@
DVIPS = @DVIPS@
PS2PDF = @PS2PDF@
LATEX2HTML = @LATEX2HTML@
DOXYGEN = @DOXYGEN@
HAVE_DOT = @HAVE_DOT@
DOT_PATH = @DOT_PATH@
MKDIRS = @MKDIRS@
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@

TEXINPUTS = :$(srcdir):$(srcdir)/..:..:

TARGET_DVI  = $(MAN).dvi
TARGET_PS = $(MAN).ps
TARGET_PDF = $(MAN).pdf
TARGET_HTML = $(MAN).html

ifndef LATEX2HTML
  TARGET_HTML =
endif

ifndef PS2PDF
  TARGET_PDF =
endif

ifndef DVIPS
  TARGET_PS =
  TARGET_PDF =
  TARGET_HTML =
endif

ifndef LATEX
  TARGET_DVI =
  TARGET_PS =
  TARGET_PDF =
  TARGET_HTML =
endif

vpath %.html $(currdir)/html:
vpath %.tex $(srcdir):$(srcdir)/..
vpath %.bib $(srcdir):
