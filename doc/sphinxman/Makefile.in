@top_srcdir@/tests/docs_bases/input.dat

autotarget12 = \
$(SOURCEDIR)/autodoc_basissets_byfamily.rst

$(autotarget12): %: $(autodepend12)
	cd ../../tests/docs_bases; $(MAKE) clean; $(MAKE)
	cp ../../tests/docs_bases/$(@F) $(SOURCEDIR)/$(@F)


# Autodoc psi files
autodepend13 = \
@top_srcdir@/include/psifiles.h \
